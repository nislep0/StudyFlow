{
  "private": true,
  "name": "sd",
  "version": "1.0.0",
  "description": "StudyFlow – це веб-застосунок для студентів, який допомагає керувати навчальними завданнями, дедлайнами та прогресом виконання.",
  "main": "index.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "npm -w frontend run lint && npm -w backend run lint",
    "format": "npm -w frontend run format && npm -w backend run format",
    "format:fix": "npm -w frontend run format:fix && npm -w backend run format:fix",
    "test": "npm -w backend run test",
    "test:integration": "npm -w backend run test:integration:run",
    "test:e2e": "npm -w backend run test:e2e:run",
    "test:all": "npm -w backend run test:all",
    "build": "npm -w frontend run build && npm -w backend run build"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx,js,jsx}": "npm -w frontend run lint --",
    "backend/src/**/*.{ts,tsx,js,jsx}": "npm -w backend run lint --",
    "*.{json,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nislep0/StudyFlow.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nislep0/StudyFlow/issues"
  },
  "homepage": "https://github.com/nislep0/StudyFlow#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "react-router-dom": "^6.30.2"
  }
}
