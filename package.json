{
  "private": true,
  "name": "sd",
  "version": "1.0.0",
  "description": "StudyFlow – це веб-застосунок для студентів, який допомагає керувати навчальними завданнями, дедлайнами та прогресом виконання.",
  "main": "index.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint \"frontend/src/**/*.{ts,tsx,js,jsx}\" \"backend/src/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "test": "echo \"No tests yet\"",
    "build": "npm run build -w frontend && npm run build -w backend"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nislep0/StudyFlow.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nislep0/StudyFlow/issues"
  },
  "homepage": "https://github.com/nislep0/StudyFlow#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.2"
  },
  "dependencies": {
    "react-router-dom": "^6.30.2"
  }
}
